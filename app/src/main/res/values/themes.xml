<resources>
    <!-- Base application theme. -->
    <style name="Theme.NongBoohae" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:buttonStyle">@style/PretendardButtonStyle</item>
        <item name="android:editTextStyle">@style/PretendardEditTextStyle</item>
        <item name="android:radioButtonStyle">@style/PretendardRadioButtonStyle</item>
        <item name="android:checkboxStyle">@style/PretendardCheckboxStyle</item>
        <item name="android:textViewStyle">@style/PretendardTextViewStyle</item>
    </style>

    <!--BottomSheetDialog 배경 투명하게 하기 위함-->
    <style name="TransParentBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransParentModalStyle</item>
    </style>

    <style name="TransParentModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>