<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/white_round_top_border_20">

    <TextView
        android:id="@+id/diagnosis_bottom_sheet_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI 진단할 작물을 선택해주세요"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:textSize="15sp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/diagnosis_bottom_sheet_title_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:clickable="false">

        <!--작물1-->
        <androidx.cardview.widget.CardView
            android:id="@+id/diagnosis_bottom_sheet_crop1_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/diagnosis_bottom_sheet_crop1_iv"
                android:layout_width="85dp"
                android:layout_height="113dp"
                android:src="@color/gray1"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/diagnosis_bottom_sheet_crop1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="포도"
            app:layout_constraintTop_toBottomOf="@id/diagnosis_bottom_sheet_crop1_cv"
            app:layout_constraintStart_toStartOf="@id/diagnosis_bottom_sheet_crop1_cv"
            app:layout_constraintEnd_toEndOf="@id/diagnosis_bottom_sheet_crop1_cv"
            android:layout_marginTop="5dp"
            android:textSize="16sp"/>

        <!--작물2-->
        <androidx.cardview.widget.CardView
            android:id="@+id/diagnosis_bottom_sheet_crop2_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/diagnosis_bottom_sheet_crop1_cv"
            android:layout_marginStart="20dp">

            <ImageView
                android:id="@+id/diagnosis_bottom_sheet_crop2_iv"
                android:layout_width="85dp"
                android:layout_height="113dp"
                android:src="@color/gray1"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/diagnosis_bottom_sheet_crop2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가지"
            app:layout_constraintTop_toBottomOf="@id/diagnosis_bottom_sheet_crop2_cv"
            app:layout_constraintStart_toStartOf="@id/diagnosis_bottom_sheet_crop2_cv"
            app:layout_constraintEnd_toEndOf="@id/diagnosis_bottom_sheet_crop2_cv"
            android:layout_marginTop="5dp"
            android:textSize="16sp"/>

        <!--작물3-->
        <androidx.cardview.widget.CardView
            android:id="@+id/diagnosis_bottom_sheet_crop3_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/diagnosis_bottom_sheet_crop2_cv"
            android:layout_marginStart="20dp">

            <ImageView
                android:id="@+id/diagnosis_bottom_sheet_crop3_iv"
                android:layout_width="85dp"
                android:layout_height="113dp"
                android:src="@color/gray1"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/diagnosis_bottom_sheet_crop3_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오이"
            app:layout_constraintTop_toBottomOf="@id/diagnosis_bottom_sheet_crop3_cv"
            app:layout_constraintStart_toStartOf="@id/diagnosis_bottom_sheet_crop3_cv"
            app:layout_constraintEnd_toEndOf="@id/diagnosis_bottom_sheet_crop3_cv"
            android:layout_marginTop="5dp"
            android:textSize="16sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>